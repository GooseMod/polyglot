{
    "name": "Polymod",
    "description": "A universal mod to theme and enhance the sites you love",

    "version": "2",
    "version_name" : "2 dev",

    "author": "Polyteam",
    "homepage_url": "https://polymod.dev",

    "icons": {
        "48": "icons/48.png",
        "96": "icons/96.png",
        "128": "icons/128.png"
    },

    "browser_action": {
        "default_icon": "icons/128.png",
        "default_title": "Polymod",
        "default_popup": "popup/index.html"
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "content_scripts": [
        {
            "matches": ["*://app.element.io/*", "*://app.revolt.chat/*", "*://www.guilded.gg/*", "*://app.slack.com/*", "*://teams.microsoft.com/*", "*://www.youtube.com/*", "*://www.google.com/*", "*://github.com/*", "*://duckduckgo.com/*", "*://open.spotify.com/*"],
            "all_frames": true,
            "js": ["content.js"]
        }
    ],

    "permissions": [
        "storage",
        "*://app.element.io/*",
        "*://app.revolt.chat/*",
        "*://www.guilded.gg/*",
        "*://app.slack.com/*",
        "*://teams.microsoft.com/*",
        "*://www.youtube.com/*",
        "*://www.google.com/*",
        "*://github.com/*",
        "*://duckduckgo.com/*",
        "*://open.spotify.com/*"
    ],

    "web_accessible_resources": [
        "env.json",
        "lib/getPlugins.js"
    ],

    "manifest_version": 2
}
