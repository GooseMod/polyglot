{
    "name": "Polyglot",
    "description": "A new cross-site mod for chat apps.",

    "version": "0.3.0",

    "author": "Polyteam",
    "homepage_url": "https://github.com/polyglot-mod/polyglot",

    "icons": {
        "48": "icons/48.png",
        "96": "icons/96.png",
        "128": "icons/128.png"
    },

    "browser_action": {
        "default_icon": "icons/128.png",
        "default_title": "Polyglot",
        "default_popup": "popup/index.html"
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "content_scripts": [
        {
            "matches": ["*://app.element.io/*", "*://app.revolt.chat/*", "*://www.guilded.gg/*"],
            "js": ["content.js"]
        }
    ],

    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "*://app.element.io/*",
        "*://app.revolt.chat/*",
        "*://www.guilded.gg/*"
    ],

    "manifest_version": 2
}
